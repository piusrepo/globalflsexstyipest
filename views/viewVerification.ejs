<%- include('partials/header') %>

<head>
    <title>View Verifications</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/assetss/index.css"> 
    <link rel="stylesheet" href="/assets0/notify.css">
    <style>
        .list-group-item {
            background-color: #1a1a1a; /* Darker background for contrast */
            color: #ffffff; /* White text for readability */
            border-color: #333;
        }
        .list-group-item b {
            color: #ffffff; /* Ensure labels are visible */
        }
        .img-thumbnail {
            max-width: 300px; /* Limit image size */
            margin: 10px;
        }
    </style>
</head>
<body>
    <section class="content" style="background-color: black;">
        <div id="a-notification" class="notification gone d-flex justify-content-start">
            <div class="d-flex flex-column"></div>
        </div>

        <div class="d-flex justify-content-between from-top">
            <div>
                <a href="/adminnavbarPage"><img src="/assetss/img/ham.svg" alt="MENU"/></a>
            </div>
            <div class="d-flex flex-column">
                <div id="google_translate_element"></div>
                <script type="text/javascript">
                    function googleTranslateElementInit() {
                        new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
                    }
                </script>
                <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
            </div>
            <div>
                <a href="/account"><div class="ph">
                    <img src="/assetss/img/pers.svg" alt="ACCOUNT" />
                </div></a>
            </div>
        </div>

        <div class="d-flex justify-content-evenly flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom" style="background-color: black;">
            <h1 class="h2 text-white"><%= verify.fullname %></h1>
            <div class="btn-toolbar mb-2 mb-md-0"></div>
        </div>

        <div class="col py-3" style="background-color: black;">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active text-white"><%= verify.fullname %></li>
                        </ol>
                    </nav>
                </div>
                <div class="col text-end fw-lighter">
                    <b class="text-white">Verification ID:</b> <b class="text-white"><%= verify._id %></b>
                </div>
            </div>
        </div>

        <ul class="list-group">
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Email:</b></div>
                    <div class="col"><%= verify.email %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Username:</b></div>
                    <div class="col"><%= verify.username %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Fullname:</b></div>
                    <div class="col"><%= verify.fullname %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>City:</b></div>
                    <div class="col"><%= verify.city %></div>
                </div>
            </li>  
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Gender:</b></div>
                    <div class="col"><%= verify.gender %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Date of Birth:</b></div>
                    <div class="col"><%= verify.dateofBirth %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Marital Status:</b></div>
                    <div class="col"><%= verify.marital %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Age:</b></div>
                    <div class="col"><%= verify.age %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Address:</b></div>
                    <div class="col"><%= verify.address %></div>
                </div>
            </li>
            <!-- Highlighted Image Sections -->
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Front Photo(s):</b></div>
                    <div class="col">
                        <% if (verify.images && verify.images.length > 0) { %>
                            <% verify.images.forEach(image => { %>
                                <img src="/IMG_UPLOADS/<%= image %>" alt="Front Image" class="img-thumbnail">
                            <% }) %>
                        <% } else { %>
                            <p>No front images uploaded.</p>
                        <% } %>
                    </div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Back Photo:</b></div>
                    <div class="col">
                        <% if (verify.backImage) { %>
                            <img src="/IMG_UPLOADS/<%= verify.backImage %>" alt="Back Image" class="img-thumbnail">
                        <% } else { %>
                            <p>No back image uploaded.</p>
                        <% } %>
                    </div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Date Created:</b></div>
                    <div class="col"><%= verify.createdAt %></div>
                </div>
            </li>
            <li class="list-group-item"> 
                <div class="row">
                    <div class="col" style="max-width: 140px"><b>Date Modified:</b></div>
                    <div class="col"><%= verify.updatedAt %></div>
                </div>
            </li>
        </ul>
    </section>

<%- include('partials/footer') %>