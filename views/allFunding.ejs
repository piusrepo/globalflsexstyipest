</head>
<body>

<section class="content">
    
    <div id="a-notification" class="notification  gone   d-flex justify-content-start ">
		<div class="d-flex flex-column">
 
		</div>
	</div>

<div class="d-flex justify-content-between from-top">
	<div>
		<a href="/adminnavbarPage"><img src="assetss/img/ham.svg" /></a>
	</div>
	<div class="d-flex flex-column">
	    <div id="google_translate_element"></div>

<script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
}
</script>

<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
<!-- <div class="d-flex justify-content-center align-items-center">
				<div class="uname">Web developer</div>
			</div> -->
			</div>
	<div>
		<a href="/account"><div class="ph">
    <img src="assetss/img/pers.svg" /> </div></a>
	</div>
</div>

<div class="table-responsive">
  <%if(deposit != ''){%>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">S/N</th>
        <th scope="col">Payment Method</th>
        <th scope="col">Amount</th>
        <th scope="col">Status</th>
        <!-- <th scope="col">Narration</th> -->
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <%  deposit.forEach((element, index) => {  %>
        <tr class="align-middle">
          <td> <h5><%= index %></h5> </td>
          <td> <h5><%= element.type %></h5> </td>
          <td><h5><%= element.amount %></h5>  </td>
          <td><h5><%= element.status %></h5> </td>
          <!-- <td><img src="element.image%>" alt="Image" style="width: 50px; height: fit-content;" ></td> -->
          <td><h5>  <%=element.narration %></h5>  </td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="/viewDeposit/<%= element._id %> " type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="/editDeposit/<%= element._id %> " type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
              <form action="/deleteDeposit/<%=element._id%>?_method=DELETE" method="POST" class="position-relative">
                <button type="submit" class="btn btn-danger btn-small">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <% }else{%>
    <h1 class="text-center text-secondary mt-5">No deposits  found yet!</h1>
    <% } %>
</div>


</section>





<%- include('partials/footer')%>








