      <!-- Pass the user ID from the backend to the frontend -->
<script>
  // Assuming user._id is passed from the backend when rendering the page
  const userId = '<%= user._id %>'; // EJS syntax to inject user ID from backend

  document.getElementById('generateOtpBtn').addEventListener('click', async () => {
      try {
          const response = await fetch(`/generateOTP/${userId}`, { // Use userId instead of data._id
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              }
          });
          const data = await response.json();
          
          if (data.otp) {
              document.getElementById('otpDisplay').value = data.otp;
              document.getElementById('otpMessage').textContent = 'OTP generated successfully. Valid for 24 hours.'; // Updated to 24 hours
              
              // Copy to clipboard functionality
              document.getElementById('otpDisplay').addEventListener('click', () => {
                  navigator.clipboard.writeText(data.otp);
                  document.getElementById('otpMessage').textContent = 'OTP copied to clipboard!';
              });
          } else {
              document.getElementById('otpMessage').textContent = 'Error: ' + data.error;
          }
      } catch (error) {
          document.getElementById('otpMessage').textContent = 'Error generating OTP';
          console.error(error);
      }
  });
</script>

