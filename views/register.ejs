  <script>
    const form = document.querySelector('form');
    const errors = {
        fullname: document.querySelector('.fullname.error'),
        email: document.querySelector('.email.error'),
        account: document.querySelector('.account.error'),
        country: document.querySelector('.country.error'),
        gender: document.querySelector('.gender.error'),
        tel: document.querySelector('.tel.error'),
        currency: document.querySelector('.currency.error'),
        password: document.querySelector('.password.error')
    };

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        Object.values(errors).forEach(error => error.textContent = '');

        const formData = {
            fullname: form.fullname.value,
            email: form.email.value,
            account: form.account.value,
            country: form.country.value,
            gender: form.gender.value,
            tel: form.tel.value,
            currency: form.currency.value,
            password: form.password.value
        };
        console.log('Sending registration data:', formData);

        try {
            const res = await fetch('/register', { 
                method: 'POST', 
                body: JSON.stringify(formData),
                headers: {'Content-Type': 'application/json'}
            });
            console.log('Response received:', res);
            const data = await res.json();
            console.log('Response data:', data);
            if (data.errors) {
                Object.keys(data.errors).forEach(key => {
                    if (errors[key]) errors[key].textContent = data.errors[key];
                });
            }
            if (data.redirect) {
                location.assign(data.redirect);
            }
        } catch (err) {
            console.error('Fetch error:', err);
        }
    });
</script>



